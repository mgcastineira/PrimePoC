{
  "compileOnSave": false,
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "@root/*": [
        "app/*"
      ],
      "@prime/*": [
        "app/primeng/*"
      ],
      "@um/*": [
        "app/user-management/*"
      ],
      "@rollon/*": [
        "app/rollon/*"
      ],
      "@rolloff/*": [
        "app/rolloff/*"
      ],
      "@wbsmanagement/*": [
        "app/wbs-management/*"
      ],
      "@news/*": [
        "app/news/*"
      ]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2015",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
  }
}
